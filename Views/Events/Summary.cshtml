@model IEnumerable<_272ass.Models.Event>

@{
    ViewBag.Title = "Summary";
}

<h2>Summary</h2>
<h5>Events managed by @User.Identity.Name</h5>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EventType.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastEdit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Number of registration
        </th>
        <th>Total Revenue</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventType.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastEdit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @item.Attendees.Count()
            </td>
            <td>
                @{
                    decimal a = item.Attendees.Count();
                    decimal b = item.Price;
                    decimal c = a * b;
                }
                @c
            </td>
        </tr>
}

</table>
